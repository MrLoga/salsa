          //- p= data.region

          p Добавить в друзья
          p Добавить в друзья
      .pu-right  
        .pu-info
          .pu-names
            .pu-full-name.comfortaa-font= profile.sname + ' ' + profile.fname + ' ' + profile.tname
            if(profile.sex == 'man')
              img.pu-man(src="/images/vs_boy_70.png")
            if(profile.sex == 'woman')
              img.pu-woman(src="/images/vs_girl_62.png")
